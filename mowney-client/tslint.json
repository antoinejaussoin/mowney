{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ordered-imports": false,
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  }
}