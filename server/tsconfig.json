{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "../node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
